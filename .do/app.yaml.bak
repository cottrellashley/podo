name: podo-app
services:
  # Backend API Service
  - name: backend
    source_dir: /server
    github:
      repo: ashleycottrell/podo
      branch: main
    run_command: npm start
    environment_slug: node-js
    instance_count: 1
    instance_size_slug: basic-xxs
    http_port: 3001
    routes:
      - path: /api
    envs:
      - key: NODE_ENV
        value: production
      - key: JWT_SECRET
        value: ${JWT_SECRET}
        type: SECRET
      - key: DATABASE_URL
        value: ${DATABASE_URL}
        type: SECRET
      - key: CORS_ORIGINS
        value: ${_self.DOMAIN},https://${_self.DOMAIN}
    health_check:
      http_path: /api/health

  # Frontend React Service
  - name: frontend
    source_dir: /
    github:
      repo: ashleycottrell/podo
      branch: main
    build_command: npm ci && npm run build
    run_command: npx serve -s dist -l 8080
    environment_slug: node-js
    instance_count: 1
    instance_size_slug: basic-xxs
    http_port: 8080
    routes:
      - path: /
    envs:
      - key: VITE_API_URL
        value: https://${backend.DOMAIN}/api

# Database (if using DigitalOcean Managed Database)
databases:
  - name: podo-db
    engine: PG
    version: "15"
    size: db-s-1vcpu-1gb

# Static Assets (optional - for better performance)
static_sites:
  - name: assets
    source_dir: /dist
    github:
      repo: ashleycottrell/podo
      branch: main
    build_command: npm ci && npm run build
    output_dir: /dist
    routes:
      - path: /assets 